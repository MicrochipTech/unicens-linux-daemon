<?xml version="1.0"?>
<Unicens AsyncBandwidth="104" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="unicens.xsd" Network="INICnet-50">
    <!-- Server Node -->
    <Node Address="0x200" Name="Head Unit">
        <SyncConnection Driver="Driver_Sound_5.1">
            <USBSocket EndpointAddress="0x1" FramesPerTransaction="42"/>
            <Splitter BytesPerFrame="12">
                <NetworkSocket Route="Route_HeadUnit_Front" Offset="0" Bandwidth="4"/>
                <NetworkSocket Route="Route_HeadUnit_Rear" Offset="4" Bandwidth="4"/>
                <NetworkSocket Route="Route_HeadUnit_Effect" Offset="8" Bandwidth="4"/>
            </Splitter>
        </SyncConnection>
    </Node>
    <Driver Name="Driver_Sound_5.1">
    	<!-- Uncoment the following line to use character device (located in /dev/inic*) -->
    	<!--Cdev BufferSize="1008" BufferCount="8" Name="sync-tx-6ch"/-->
    	
    	<!-- Uncoment the following line to use ALSA (use arecord and aplay or Audacity) -->
        <Alsa BufferSize="1008" BufferCount="8" Name="sync-tx-6ch" AudioChannelCount="6" AudioChannelResolution="16bit"/>
    </Driver>

    <!-- 1st Slim Amplifier -->
    <Node Address="0x270" Script="slim-amp-config" Name="Amplifier 1">
        <StreamPort ClockConfig="64Fs" DataAlignment="Left16Bit"/>
        <SyncConnection>
            <NetworkSocket Route="Route_HeadUnit_Front" Bandwidth="4"/>
            <StreamSocket StreamPinID="SRXA0" Bandwidth="4"/>
        </SyncConnection>
    </Node>
    
    <!-- 2nd Slim Amplifier -->
    <Node Address="0x271" Script="slim-amp-config" Name="Amplifier 2">
        <StreamPort ClockConfig="64Fs" DataAlignment="Left16Bit"/>
        <SyncConnection>
            <NetworkSocket Route="Route_HeadUnit_Rear" Bandwidth="4"/>
            <StreamSocket StreamPinID="SRXA0" Bandwidth="4"/>
        </SyncConnection>
    </Node>
    
    <!-- 3rd Slim Amplifier -->
    <Node Address="0x272" Script="slim-amp-config" Name="Amplifier 3">
        <StreamPort ClockConfig="64Fs" DataAlignment="Left16Bit"/>
        <SyncConnection>
            <NetworkSocket Route="Route_HeadUnit_Effect" Bandwidth="4"/>
            <StreamSocket StreamPinID="SRXA0" Bandwidth="4"/>
        </SyncConnection>
    </Node>
    
    <Script Name="slim-amp-config">
        <I2CPortCreate Speed="FastMode"/>
        <I2CPortWrite Address="0x2A" Payload="1B 80"/>
        <I2CPortWrite Address="0x2A" Payload="11 B8"/>
        <I2CPortWrite Address="0x2A" Payload="12 60"/>
        <I2CPortWrite Address="0x2A" Payload="13 A0"/>
        <I2CPortWrite Address="0x2A" Payload="14 48"/>
        <I2CPortWrite Address="0x2A" Payload="20 00 89 77 72"/>
        <I2CPortWrite Address="0x2A" Payload="06 00"/>
        <I2CPortWrite Address="0x2A" Payload="05 00"/>
        <!-- Register 7: Master Volume (Max Volume=07 00 00 and Min Volume=07 03 FF) -->
        <I2CPortWrite Address="0x2A" Payload="07 01 50"/>
    </Script>

    <!-- 1st Aux IO -->
    <Node Address="0x240" Script="Script_AUX_IO" Name="AuxIO 1">
        <StreamPort ClockConfig="64Fs" DataAlignment="Left16Bit"/>
        <SyncConnection>
            <NetworkSocket Route="Route_HeadUnit_Front" Bandwidth="4"/>
            <StreamSocket StreamPinID="SRXA1" Bandwidth="4"/>
        </SyncConnection>
    </Node>
    
    <!-- 2nd Aux IO -->
    <Node Address="0x241" Script="Script_AUX_IO" Name="AuxIO 2">
        <StreamPort ClockConfig="64Fs" DataAlignment="Left16Bit"/>
        <SyncConnection>
            <NetworkSocket Route="Route_HeadUnit_Rear" Bandwidth="4"/>
            <StreamSocket StreamPinID="SRXA1" Bandwidth="4"/>
        </SyncConnection>
    </Node>
    
    <!-- 3rd Aux IO -->
    <Node Address="0x242" Script="Script_AUX_IO" Name="AuxIO 3">
        <StreamPort ClockConfig="64Fs" DataAlignment="Left16Bit"/>
        <SyncConnection>
            <NetworkSocket Route="Route_HeadUnit_Effect" Bandwidth="4"/>
            <StreamSocket StreamPinID="SRXA1" Bandwidth="4"/>
        </SyncConnection>
    </Node>
    
	<Script Name="Script_AUX_IO">
		<I2CPortCreate Speed="FastMode" />
		<I2CPortWrite Mode="BurstMode" BlockCount="10" Address="0x18" Length="3" Timeout="100"
			Payload="00 0f 02 01 00 00 02 a5 df 03 3f 3f 04 02 02 10 50 50 11 00 00 12 00 00 13 00 00 14 00 00" />
		<I2CPortWrite Mode="BurstMode" BlockCount="4" Address="0x18" Length="3" Timeout="100" Payload="20 00 00 21 00 00 22 00 00 23 00 00" />
		<GPIOPortCreate DebounceTime="20" />
		<GPIOPortPinMode PinConfiguration="03 35 04 35 05 35 06 35 07 41 08 40" />
	</Script>
</Unicens>
